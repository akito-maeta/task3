<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

      <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span>Bookers</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to 'Users', users_path, class: "glyphicon glyphicon-user user" %></li>
              <li><%= link_to 'Books', books_path, class: "glyphicon glyphicon-book book" %></li>
              <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out log-out" %></li>
            <% else %>
              <li><%= link_to 'Home', "/", class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to 'About', "/home/about", class: "glyphicon glyphicon-link link" %></li>
              <li><%= link_to 'sign up', new_user_registration_path, class: "glyphicon glyphicon-edit edit" %></li>
              <li><%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in log-in" %></li>
            </ul>
            <% end %>
          </nav>
        </div>
      </header>

      <%= yield %>

      <footer>
        CopyRight Infratop.inc
      </footer>

  </body>
</html>
