<div class="container">
	<div class="row">

		<div class="col-xs-2">
		</div>

		<div class="col-xs-8">
			<h2>Editing Book</h2>
			<% if @book.errors.any? %>
			<div class="error-box">
				<div class="error"><%= @book.errors.count %>error prohibited this book from being saved:</div>
				<ul class="error-message-box">
					<% @book.errors.full_messages.each do |message| %>
					<li class="error-message"><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>

			<%= form_for(@book) do |f| %>
			<h5>Title</h5>
			<%= f.text_field :title, :size => "105" %>
			<h5>Body</h5>
			<%= f.text_area :body, :size => "105" %>
			<br>
			<%= f.submit 'Update Book', class: 'btn btn-primary btn-block' %><br>
			<div class="show-back">
				<%= link_to "Show", book_path(@book) %> |
				<a href="/books">Back</a>
			</div>
			<% end %>
		</div>

		<div class="col-xs-2">
		</div>

	</div>
</div>
