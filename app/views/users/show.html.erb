<div class="container">
	<div class="row">

		<div class="col-lg-3">
			<p id="notice">
				<%= flash[:notice] %>
			</p>
			<h2>UserInfo</h2>
			<%= attachment_image_tag @user, :profile_image,ã€€format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
			<table>
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></h3></th>
					</tr>
					<tr>
						<th width="112" height="37">introduction</th>
						<th width="100" height="37"><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<% if @user.id == current_user.id %>
			<p><%= link_to edit_user_path(@user), class: 'btn btn-default btn-block' do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
			</p>
			<% end %>

			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
			<div id="error_explanation">
				<h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<h5>Title</h5>
			<%= f.text_field :title %>
			<h5>Opinion</h5>
			<%= f.text_area :body %>
			<br>
			<%= f.submit 'Create Book', class: 'btn btn-primary btn-block' %>
			<% end %>
		</div>

		<div class="col-lg-9">
			<h2>Books</h2>
			<table>
				<thead>
					<tr>
						<th width="170" height="37"></th>
						<th width="242" height="37">Title</th>
						<th width="243" height="37">Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
						<td><%= link_to book.title ,book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

	</div>
</div>


